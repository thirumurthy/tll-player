<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/glass_panel_background">

    <!-- Dialog Title -->
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Category Options"
        android:textColor="@color/glass_text_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Buttons in a simple vertical layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Move Button -->
        <Button
            android:id="@+id/btn_move"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:background="@drawable/tv_button_glass"
            android:text="Move"
            android:textColor="@color/glass_text_primary"
            android:textSize="16sp"
            android:focusable="true" />

        <!-- Rename Button -->
        <Button
            android:id="@+id/btn_rename"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:background="@drawable/tv_button_glass"
            android:text="Rename"
            android:textColor="@color/glass_text_primary"
            android:textSize="16sp"
            android:focusable="true" />

        <!-- Favourite Button -->
        <Button
            android:id="@+id/btn_favourite"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:background="@drawable/tv_button_glass"
            android:text="Favourite"
            android:textColor="@color/glass_text_primary"
            android:textSize="16sp"
            android:focusable="true" />

        <!-- Cancel Button -->
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:background="@drawable/tv_button_glass"
            android:text="Cancel"
            android:textColor="@color/glass_text_secondary"
            android:textSize="16sp"
            android:focusable="true" />

    </LinearLayout>

</LinearLayout>