<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Glassmorphism background -->
    <com.thirutricks.tllplayer.ui.GlassyBackgroundView
        android:id="@+id/glassy_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/tv_settings_min_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/settings_container_padding"
        android:scrollbars="none"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <!-- Header Card -->
            <com.thirutricks.tllplayer.ui.GlassCard
                android:id="@+id/header_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/glass_card_spacing">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/info_text_primary"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Version 1.0.0"
                        android:textSize="@dimen/tv_text_size_small"
                        android:textColor="@color/info_text_secondary"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

            </com.thirutricks.tllplayer.ui.GlassCard>

            <!-- Configuration Card -->
            <com.thirutricks.tllplayer.ui.GlassCard
                android:id="@+id/configuration_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/glass_card_spacing">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONFIGURATION"
                        android:textSize="@dimen/settings_section_title_size"
                        android:textColor="@color/accent_blue"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/tv_item_spacing"
                        android:fontFamily="sans-serif-medium" />

                    <!-- Server Configuration Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/tv_item_spacing">

                        <Button
                            android:id="@+id/qrcode"
                            android:layout_width="140dp"
                            android:layout_height="@dimen/settings_button_height"
                            android:text="@string/server"
                            android:background="@drawable/tv_button_glass"
                            android:textColor="@color/info_text_primary"
                            android:textSize="@dimen/tv_text_size_small"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/server"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/info_text_secondary"
                            android:textSize="@dimen/tv_text_size_small"
                            android:layout_marginStart="@dimen/tv_item_spacing"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                    <!-- Channels Configuration Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/tv_item_spacing">

                        <Button
                            android:id="@+id/confirm_config"
                            android:layout_width="140dp"
                            android:layout_height="@dimen/settings_button_height"
                            android:text="@string/channels"
                            android:background="@drawable/tv_button_glass"
                            android:textColor="@color/info_text_primary"
                            android:textSize="@dimen/tv_text_size_small"
                            android:fontFamily="sans-serif-medium" />

                        <EditText
                            android:id="@+id/config"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/settings_button_height"
                            android:layout_marginStart="@dimen/tv_item_spacing"
                            android:gravity="center_vertical"
                            android:hint="@string/channels"
                            android:textColorHint="@color/info_text_hint"
                            android:textColor="@color/info_text_primary"
                            android:background="@drawable/tv_input_glass"
                            android:paddingStart="@dimen/tv_item_spacing"
                            android:paddingEnd="@dimen/tv_item_spacing"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                    <!-- Channel Configuration Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <Button
                            android:id="@+id/confirm_channel"
                            android:layout_width="140dp"
                            android:layout_height="@dimen/settings_button_height"
                            android:text="@string/channel"
                            android:background="@drawable/tv_button_glass"
                            android:textColor="@color/info_text_primary"
                            android:textSize="@dimen/tv_text_size_small"
                            android:fontFamily="sans-serif-medium" />

                        <EditText
                            android:id="@+id/channel"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/settings_button_height"
                            android:layout_marginStart="@dimen/tv_item_spacing"
                            android:gravity="center_vertical"
                            android:hint="@string/channel"
                            android:textColorHint="@color/info_text_hint"
                            android:textColor="@color/info_text_primary"
                            android:background="@drawable/tv_input_glass"
                            android:paddingStart="@dimen/tv_item_spacing"
                            android:paddingEnd="@dimen/tv_item_spacing"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                </LinearLayout>

            </com.thirutricks.tllplayer.ui.GlassCard>

            <!-- Preferences Card -->
            <com.thirutricks.tllplayer.ui.GlassCard
                android:id="@+id/preferences_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/glass_card_spacing">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PREFERENCES"
                        android:textSize="@dimen/settings_section_title_size"
                        android:textColor="@color/accent_blue"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/tv_item_spacing"
                        android:fontFamily="sans-serif-medium" />

                    <com.thirutricks.tllplayer.ui.ModernToggleSwitch
                        android:id="@+id/switch_channel_reversal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/settings_item_height"
                        android:text="@string/title_channel_reversal"
                        android:textColor="@color/info_text_primary"
                        android:textSize="@dimen/tv_text_size_medium"
                        android:paddingStart="8dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif" />

                    <com.thirutricks.tllplayer.ui.ModernToggleSwitch
                        android:id="@+id/switch_channel_num"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/settings_item_height"
                        android:text="@string/title_channel_num"
                        android:textColor="@color/info_text_primary"
                        android:textSize="@dimen/tv_text_size_medium"
                        android:paddingStart="8dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif" />

                    <com.thirutricks.tllplayer.ui.ModernToggleSwitch
                        android:id="@+id/switch_time"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/settings_item_height"
                        android:text="@string/title_time"
                        android:textColor="@color/info_text_primary"
                        android:textSize="@dimen/tv_text_size_medium"
                        android:paddingStart="8dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif" />

                    <com.thirutricks.tllplayer.ui.ModernToggleSwitch
                        android:id="@+id/switch_watch_last"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/settings_item_height"
                        android:text="@string/title_watch_last"
                        android:textColor="@color/info_text_primary"
                        android:textSize="@dimen/tv_text_size_medium"
                        android:paddingStart="8dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif" />

                    <com.thirutricks.tllplayer.ui.ModernToggleSwitch
                        android:id="@+id/switch_force_high_quality"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/settings_item_height"
                        android:text="@string/title_force_high_quality"
                        android:textColor="@color/info_text_primary"
                        android:textSize="@dimen/tv_text_size_medium"
                        android:paddingStart="8dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif" />

                    <com.thirutricks.tllplayer.ui.ModernToggleSwitch
                        android:id="@+id/switch_boot_startup"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/settings_item_height"
                        android:text="@string/title_boot_startup"
                        android:textColor="@color/info_text_primary"
                        android:textSize="@dimen/tv_text_size_medium"
                        android:paddingStart="8dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif" />

                    <com.thirutricks.tllplayer.ui.ModernToggleSwitch
                        android:id="@+id/switch_config_auto_load"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/settings_item_height"
                        android:text="@string/title_config_auto_load"
                        android:textColor="@color/info_text_primary"
                        android:textSize="@dimen/tv_text_size_medium"
                        android:paddingStart="8dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif" />

                    <com.thirutricks.tllplayer.ui.ModernToggleSwitch
                        android:id="@+id/switch_channel_check"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/settings_item_height"
                        android:text="@string/title_channel_check"
                        android:textColor="@color/info_text_primary"
                        android:textSize="@dimen/tv_text_size_medium"
                        android:paddingStart="8dp"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

            </com.thirutricks.tllplayer.ui.GlassCard>

            <!-- Actions Card -->
            <com.thirutricks.tllplayer.ui.GlassCard
                android:id="@+id/actions_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ACTIONS"
                        android:textSize="@dimen/settings_section_title_size"
                        android:textColor="@color/accent_blue"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/tv_item_spacing"
                        android:fontFamily="sans-serif-medium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <Button
                            android:id="@+id/clear"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/settings_item_height"
                            android:layout_weight="1"
                            android:text="@string/clear"
                            android:background="@drawable/tv_button_glass"
                            android:textColor="@color/info_text_primary"
                            android:textSize="@dimen/tv_text_size_small"
                            android:layout_marginEnd="8dp"
                            android:fontFamily="sans-serif-medium" />

                        <Button
                            android:id="@+id/reset_order"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/settings_item_height"
                            android:layout_weight="1"
                            android:text="Reset Order"
                            android:background="@drawable/tv_button_glass"
                            android:textColor="@color/info_text_primary"
                            android:textSize="@dimen/tv_text_size_small"
                            android:layout_marginEnd="8dp"
                            android:fontFamily="sans-serif-medium" />

                        <Button
                            android:id="@+id/appreciate"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/settings_item_height"
                            android:layout_weight="1"
                            android:text="@string/appreciate"
                            android:background="@drawable/tv_button_glass"
                            android:textColor="@color/info_text_primary"
                            android:textSize="@dimen/tv_text_size_small"
                            android:layout_marginEnd="8dp"
                            android:fontFamily="sans-serif-medium" />

                        <Button
                            android:id="@+id/exit"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/settings_item_height"
                            android:layout_weight="1"
                            android:text="@string/exit"
                            android:background="@drawable/tv_button_glass"
                            android:textColor="@color/info_text_primary"
                            android:textSize="@dimen/tv_text_size_small"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                    <!-- Hidden version check section (keeping for compatibility) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/check_version"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/check_version" />

                        <TextView
                            android:id="@+id/version_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>

            </com.thirutricks.tllplayer.ui.GlassCard>

        </LinearLayout>
    </ScrollView>

</FrameLayout>