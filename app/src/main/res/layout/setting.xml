<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <ScrollView
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:minWidth="600dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="32dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/tv_panel_bg"
            android:padding="40dp"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version 1.0.0"
                android:textSize="14sp"
                android:textColor="#B3FFFFFF"
                android:layout_marginBottom="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONFIGURATION"
                android:textSize="13sp"
                android:textColor="#00B0FF"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="6dp">

                    <Button
                        android:id="@+id/qrcode"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:text="@string/server"
                        android:background="@drawable/group_item_bg"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/server"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#B3FFFFFF"
                        android:textSize="12sp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/confirm_config"
                    android:layout_width="140dp"
                    android:layout_height="48dp"
                    android:text="@string/channels"
                    android:background="@drawable/tv_button_bg"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/config"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:layout_marginStart="12dp"
                    android:gravity="center_vertical"
                    android:hint="@string/channels"
                    android:textColorHint="#99FFFFFF"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/tv_input_bg"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <Button
                    android:id="@+id/confirm_channel"
                    android:layout_width="140dp"
                    android:layout_height="48dp"
                    android:text="@string/channel"
                    android:background="@drawable/tv_button_bg"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/channel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:layout_marginStart="12dp"
                    android:gravity="center_vertical"
                    android:hint="@string/channel"
                    android:textColorHint="#99FFFFFF"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/tv_input_bg"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PREFERENCES"
                android:textSize="13sp"
                android:textColor="#00B0FF"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <Switch
                android:id="@+id/switch_channel_reversal"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/title_channel_reversal"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:paddingStart="8dp"
                android:layout_marginBottom="6dp" />

            <Switch
                android:id="@+id/switch_channel_num"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/title_channel_num"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:paddingStart="8dp"
                android:layout_marginBottom="6dp" />

            <Switch
                android:id="@+id/switch_time"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/title_time"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:paddingStart="8dp"
                android:layout_marginBottom="6dp" />

            <Switch
                android:id="@+id/switch_boot_startup"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/title_boot_startup"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:paddingStart="8dp"
                android:layout_marginBottom="6dp" />

            <Switch
                android:id="@+id/switch_config_auto_load"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/title_config_auto_load"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:paddingStart="8dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACTIONS"
                android:textSize="13sp"
                android:textColor="#00B0FF"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/clear"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="@string/clear"
                    android:background="@drawable/tv_button_bg"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp" />

                <Button
                    android:id="@+id/appreciate"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="@string/appreciate"
                    android:background="@drawable/tv_button_bg"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp" />

                <Button
                    android:id="@+id/exit"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="@string/exit"
                    android:background="@drawable/tv_button_bg"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:id="@+id/check_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/check_version" />

                <TextView
                    android:id="@+id/version_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
