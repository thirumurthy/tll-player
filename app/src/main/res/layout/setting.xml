<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="false"
    android:gravity="end"
    >
    <ScrollView
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/blur"
        >
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:textSize="11sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/check_version"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginEnd="5dp"
                android:textSize="11sp"
                android:text="@string/check_version"
                />
            <ProgressBar
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/version_name"
                android:text=""
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/qrcode"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginEnd="5dp"
                android:textSize="11sp"
                android:text="@string/server" />
            <TextView
                android:id="@+id/server"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="11sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/confirm_config"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginEnd="5dp"
                android:textSize="11sp"
                android:text="@string/channels" />
            <EditText
                android:id="@+id/config"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:autofillHints=""
                android:hint="@string/channels"
                android:scrollbars="vertical"
                android:inputType="textMultiLine" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/confirm_channel"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginEnd="5dp"
                android:textSize="11sp"
                android:text="@string/channel" />
            <EditText
                android:id="@+id/channel"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:autofillHints=""
                android:hint="@string/channel"
                android:scrollbars="vertical"
                android:inputType="textMultiLine" />
        </LinearLayout>
        <Button
            android:id="@+id/clear"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginTop="0dp"
            android:text="@string/clear"
            android:textSize="11sp"
            />
        <Button
            android:id="@+id/appreciate"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginTop="0dp"
            android:text="@string/appreciate"
            android:textSize="11sp"
            />
        <Button
            android:id="@+id/exit"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginTop="0dp"
            android:text="@string/exit"
            android:textSize="11sp"
            />
        <Switch
            android:id="@+id/switch_channel_reversal"
            android:text="@string/title_channel_reversal"
            android:textSize="11sp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Switch
            android:id="@+id/switch_channel_num"
            android:text="@string/title_channel_num"
            android:textSize="11sp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Switch
            android:id="@+id/switch_time"
            android:text="@string/title_time"
            android:textSize="11sp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Switch
            android:id="@+id/switch_boot_startup"
            android:text="@string/title_boot_startup"
            android:layout_marginTop="5dp"
            android:textSize="11sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Switch
            android:id="@+id/switch_config_auto_load"
            android:text="@string/title_config_auto_load"
            android:textSize="11sp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>