<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/glass_item_spacing"
    android:layout_marginStart="@dimen/glass_item_spacing"
    android:layout_marginEnd="@dimen/glass_item_spacing"
    app:cardCornerRadius="@dimen/glass_corner_radius"
    app:cardElevation="@dimen/glass_elevation_default"
    app:cardBackgroundColor="@color/glass_item_background"
    android:focusable="true"
    android:clickable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/glass_content_padding">

        <androidx.cardview.widget.CardView
            android:id="@+id/icon_frame"
            android:layout_width="@dimen/glass_icon_size"
            android:layout_height="@dimen/glass_icon_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="@dimen/glass_icon_corner_radius"
            app:cardElevation="@dimen/glass_elevation_small"
            app:cardBackgroundColor="@color/glass_icon_background">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Channel Icon" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/icon_frame"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/heart"
            android:layout_marginStart="@dimen/glass_content_spacing"
            android:layout_marginEnd="@dimen/glass_content_spacing"
            android:textColor="@color/glass_text_primary"
            android:maxLines="1"
            tools:text="Channel Name"
            android:ellipsize="end"
            android:textSize="@dimen/glass_text_size_primary"
            android:fontFamily="sans-serif-medium"/>

        <ImageView
            android:id="@+id/heart"
            android:layout_width="@dimen/glass_icon_size_small"
            android:layout_height="@dimen/glass_icon_size_small"
            android:src="@drawable/ic_heart_empty"
            android:contentDescription="Favorite"
            app:layout_constraintEnd_toStartOf="@+id/arrows"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:clickable="true"
            android:focusable="false"
            android:padding="@dimen/glass_touch_padding"
            android:background="?android:attr/selectableItemBackgroundBorderless"/>

        <LinearLayout
            android:id="@+id/arrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@drawable/glass_item_background"
            android:padding="@dimen/glass_touch_padding">

            <ImageView
                android:id="@+id/arrow_up"
                android:layout_width="@dimen/glass_arrow_size"
                android:layout_height="@dimen/glass_arrow_size"
                android:src="@android:drawable/arrow_up_float"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Move up"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/glass_touch_padding"/>

            <ImageView
                android:id="@+id/arrow_down"
                android:layout_width="@dimen/glass_arrow_size"
                android:layout_height="@dimen/glass_arrow_size"
                android:src="@android:drawable/arrow_down_float"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Move down"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/glass_touch_padding"/>
        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/icon_frame"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintEnd_toStartOf="@+id/heart"
            android:layout_marginStart="@dimen/glass_content_spacing"
            android:visibility="gone"
            android:text=""
            android:textColor="@color/glass_text_secondary"
            android:textSize="@dimen/glass_text_size_secondary"
            android:maxLines="1"
            android:ellipsize="end" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>