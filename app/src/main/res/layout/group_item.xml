<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/group_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/glass_category_item_height"
    android:layout_marginStart="@dimen/glass_item_margin"
    android:layout_marginEnd="@dimen/glass_item_margin"
    android:layout_marginTop="@dimen/glass_item_margin"
    android:layout_marginBottom="@dimen/glass_item_margin"
    android:focusable="true"
    android:clickable="true"
    app:cardCornerRadius="@dimen/glass_corner_radius_small"
    app:cardElevation="@dimen/glass_elevation_low"
    app:cardBackgroundColor="@android:color/transparent">

    <!-- Glass Background Layer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/glass_item_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/glass_category_item_padding_horizontal"
        android:paddingEnd="@dimen/glass_category_item_padding_horizontal"
        android:paddingTop="@dimen/glass_category_item_padding_vertical"
        android:paddingBottom="@dimen/glass_category_item_padding_vertical"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/arrows"
                android:gravity="center_vertical"
                android:textColor="@color/glass_text_primary"
                android:textSize="@dimen/glass_text_size_medium"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:ellipsize="end"
                android:maxLines="1"
                android:shadowColor="@color/glass_background_primary"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <LinearLayout
                android:id="@+id/arrows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="@dimen/glass_item_padding">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/glass_arrow_size"
                    android:layout_height="@dimen/glass_arrow_size"
                    android:layout_marginBottom="2dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="@dimen/glass_elevation_low"
                    app:cardBackgroundColor="@color/glass_move_glow">

                    <ImageView
                        android:id="@+id/arrow_up"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@android:drawable/arrow_up_float"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Move up"
                        android:scaleType="centerInside"
                        android:padding="2dp"
                        android:tint="@color/glass_text_primary" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/glass_arrow_size"
                    android:layout_height="@dimen/glass_arrow_size"
                    android:layout_marginTop="2dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="@dimen/glass_elevation_low"
                    app:cardBackgroundColor="@color/glass_move_glow">

                    <ImageView
                        android:id="@+id/arrow_down"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@android:drawable/arrow_down_float"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Move down"
                        android:scaleType="centerInside"
                        android:padding="2dp"
                        android:tint="@color/glass_text_primary" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <!-- Focus Indicator Overlay -->
    <View
        android:id="@+id/focus_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:visibility="gone" />

</androidx.cardview.widget.CardView>