<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base semi-transparent background with blur effect -->
    <item>
        <shape>
            <solid android:color="@color/glass_background" />
            <corners android:radius="@dimen/glass_card_corner_radius" />
        </shape>
    </item>
    
    <!-- Top highlight for glass effect -->
    <item android:top="0dp" android:height="24dp">
        <shape>
            <gradient
                android:startColor="@color/glass_highlight"
                android:endColor="@android:color/transparent"
                android:angle="90" />
            <corners android:radius="@dimen/glass_card_corner_radius" />
        </shape>
    </item>
    
    <!-- Subtle border for glass effect -->
    <item>
        <shape>
            <stroke 
                android:width="1dp" 
                android:color="@color/glass_border" />
            <corners android:radius="@dimen/glass_card_corner_radius" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>