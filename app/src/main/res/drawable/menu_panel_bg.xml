<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Modern blue-to-purple gradient background -->
    <gradient
        android:startColor="#CC2196F3"
        android:endColor="#CC9C27B0"
        android:angle="135"/>

    <!-- Slightly thicker rounded corners -->
    <corners android:radius="24dp" />

    <!-- Soft white translucent stroke for definition -->
    <stroke
        android:width="1dp"
        android:color="#33FFFFFF" />

    <!-- Internal padding for shadow space if needed -->
    <padding android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp" />
</shape>
