<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Darker background for dialogs -->
    <item>
        <shape>
            <solid android:color="@color/glass_overlay_medium" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Glass surface on top -->
    <item>
        <shape>
            <solid android:color="@color/glass_card_background" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Border -->
    <item>
        <shape>
            <stroke 
                android:width="1dp" 
                android:color="@color/glass_border" />
            <corners android:radius="16dp" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
