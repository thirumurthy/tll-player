<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Focused state -->
    <item android:state_focused="true">
        <layer-list>
            <!-- Glass background -->
            <item>
                <shape>
                    <solid android:color="@color/glass_background_focused" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            
            <!-- Top highlight -->
            <item android:top="0dp" android:height="16dp">
                <shape>
                    <gradient
                        android:startColor="@color/glass_highlight_focused"
                        android:endColor="@android:color/transparent"
                        android:angle="90" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            
            <!-- Enhanced border for focus -->
            <item>
                <shape>
                    <stroke 
                        android:width="2dp" 
                        android:color="@color/glass_border_focused" />
                    <corners android:radius="12dp" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Normal state -->
    <item>
        <layer-list>
            <!-- Glass background -->
            <item>
                <shape>
                    <solid android:color="@color/glass_background" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            
            <!-- Top highlight -->
            <item android:top="0dp" android:height="12dp">
                <shape>
                    <gradient
                        android:startColor="@color/glass_highlight"
                        android:endColor="@android:color/transparent"
                        android:angle="90" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            
            <!-- Subtle border -->
            <item>
                <shape>
                    <stroke 
                        android:width="1dp" 
                        android:color="@color/glass_border" />
                    <corners android:radius="12dp" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
        </layer-list>
    </item>
    
</selector>