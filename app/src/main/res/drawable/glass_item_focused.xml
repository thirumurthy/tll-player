<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glass background with higher opacity for focus -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_focus_background" />
            <corners android:radius="@dimen/glass_corner_radius_medium" />
        </shape>
    </item>
    
    <!-- Glass border with focus glow -->
    <item>
        <shape android:shape="rectangle">
            <stroke 
                android:width="@dimen/glass_border_width_thick"
                android:color="@color/glass_focus_glow" />
            <corners android:radius="@dimen/glass_corner_radius_medium" />
        </shape>
    </item>
    
    <!-- Inner highlight for glass effect -->
    <item android:top="1dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <stroke 
                android:width="@dimen/glass_border_width_thin"
                android:color="@color/glass_highlight_primary" />
            <corners android:radius="@dimen/glass_corner_radius_medium" />
        </shape>
    </item>
</layer-list>